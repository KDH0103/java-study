
public class Ex03연산자 {

	public static void main(String[] args) {
		
		//산술연산자 : + - * / %
		int num1 = 10;
		int num2 = 3;
		
		System.out.println(num1 + num2);
		System.out.println(num1 - num2);
		System.out.println(num1 * num2);
		System.out.println(num1 / num2);
		System.out.println(num1 % num2);
		
		float num3 = 3.45f;
		//더 많은 정보를 표현 할수 있느 타입으로
		//자동(묵시적) 형 변환이 일어남
		System.out.println(num1+num3);
		
		//숫자 + 문자열 --> 두개의 데이터가 붙여서 출력된다
		//===> 결과 타입 : 문자열
		String number ="10";
		System.out.println(num1+number);
	
		System.out.println(""+num1+num2);

	}

}
