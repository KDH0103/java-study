
public class Ex02변수 {

	public static void main(String[] args) {
		//변수 : 변할 수 있는 수 (변하는 데이터를 담을 수 있는 공간)
		
		//정수형태의 데이터를 담을 수 있는 변수를 선언하겠습니다(int)
		//만들어진 변수의 이름을 num이라고 부르겠습니다
		
		//Java에서의 변수는 같은이름으로 여러번 변수를 생성할 수 없다
		//int num;
		//num = 10;
		int num = 10;
		System.out.println(num*3);

		
		//30을 새로운 변수에 담고 싶습니다,
		int number = 30;
		//number 값을 100을 바꿔주세요
		number = 100;
		
		//String : 문자열
		//" " : 문자열 데이터 사용 "apple"
		//'' : 문자 데이터 사용 'a'
		String name;
		name = "승환";
		//맞는 타입만 데이터로 활용할 수 있다!
		
		final int age =20;
		age = 22;
	
	}

}
